<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.geonature.mobile.flora"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:sharedUserId="com.geonature.mobile"
    tools:ignore="GradleOverrides">

    <application
        android:name="com.geonature.mobile.flora.MainApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.home.HomeActivity"
            android:label="@string/activity_main_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.settings.MainPreferencesActivity"
            android:label="@string/activity_preferences_title">
        </activity>
        <activity
            android:name=".ui.sync.SynchronizationActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/activity_synchro_title">
        </activity>
        <activity
            android:name=".ui.input.PagerFragmentActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".ui.observers.ObserverListActivity"
            android:label="@string/activity_observers_title">
            <intent-filter>
                <action android:name="com.geonature.mobile.flora.ui.observers.ObserverListActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.frequencies.FrequencyFragmentActivity">
        </activity>
        <activity
            android:name=".ui.counting.CountingFragmentActivity">
        </activity>

        <provider
            android:name=".content.MainContentProvider"
            android:authorities="com.geonature.mobile.flora.content.MainContentProvider"
            android:exported="false"/>

        <service
            android:name="com.geonature.mobile.flora.settings.AppSettingsIntentService"
            android:exported="false"/>
        <service
            android:name="com.geonature.mobile.commons.sync.CheckServerService"
            android:exported="false"/>
        <service
            android:name="com.geonature.mobile.commons.sync.SyncService"
            android:exported="false"/>
        <service
            android:name="com.geonature.mobile.flora.input.InputIntentService"
            android:exported="false"/>

        <receiver
            android:name="com.geonature.mobile.commons.sync.StartCheckServerServiceReceiver"
            android:exported="false"/>

    </application>

</manifest>
