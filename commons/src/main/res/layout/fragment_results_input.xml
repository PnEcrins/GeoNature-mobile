<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTaxaAdded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textIsSelectable="false"
        tools:ignore="RtlHardcoded,RtlSymmetry"/>

    <Button
        android:id="@+id/buttonAddTaxon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTaxaAdded"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_action_add"
        android:text="@string/results_input_add_taxon"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded"/>

    <View
        android:id="@+id/viewSeparator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/buttonAddTaxon"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/darker_gray"/>

    <ListView
        android:id="@+id/listSelectedTaxa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewSeparator"/>

</RelativeLayout>